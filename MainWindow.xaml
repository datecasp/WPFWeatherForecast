<Window x:Class="WPFWeatherForecast.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFWeatherForecast"
        mc:Ignorable="d"
        Title="Weather Forecast" Height="450" Width="800">
    <Grid x:Name="LayoutRoot"  Width="500" Height="400" >
        <StackPanel x:Name="LayoutIntro" Visibility="Visible">
            <Image x:Name="LogoIntro" Width="500" Source="C:\Users\Danny\Desktop\Programación\WeatherForecastWPF\WeatherForecastWPF\Assets\LogoIntro.png"/>
            <Button x:Name="btnIntro" Padding="5" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,0" FontSize="14" FontWeight="Bold" Background="{x:Null}" Click="BtnIntro_Click">Click for forecast
            </Button>
        </StackPanel>
        <StackPanel x:Name="LayoutForecast" Width="500" Height="400" Visibility="Visible">
            <TextBlock x:Name="txtCity" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" Margin="0,15,0,0">Type in the city to get the forecast</TextBlock>
            <TextBox x:Name="boxCity" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" Width="150" Margin="0,15,0,0"></TextBox>
            <Button x:Name="btnCity" Padding="5" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,15,0,0" FontSize="14" FontWeight="Bold" Background="{x:Null}" Click="BtnCity_Click">Click for forecast
            </Button>
            <StackPanel x:Name="GridForecast" Visibility="Hidden">
                <TextBlock x:Name="txtForecast" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" Margin="0,15,0,0">Forecast for</TextBlock>
                <TextBlock x:Name="txtForecastCity" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" Margin="0,15,0,0"></TextBlock>
                <TextBlock x:Name="txtResponse" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" Margin="0,15,0,0"></TextBlock>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                </Grid>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
